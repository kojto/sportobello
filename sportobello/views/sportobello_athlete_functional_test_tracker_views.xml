<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- List Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_functional_test_tracker_list">
			<field name="name">sportobello.athlete.functional.test.tracker.list</field>
			<field name="model">sportobello.athlete.functional.test.tracker</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1" default_order="test_date desc" class="ko-list-main">
					<field name="athlete_id"/>
					<field name="test_date"/>
					<field name="hr_max"/>
					<field name="vo2max"/>
					<field name="vo2max_per_kg"/>
					<field name="w_max"/>
					<field name="w_max_per_kg"/>
					<field name="effective_pulse_zone"/>
					<field name="rq1_per_w"/>
					<field name="la2"/>
					<field name="la6"/>
					<field name="la15"/>
					<field name="hr2"/>
					<field name="hr6"/>
				</list>
			</field>
		</record>

		<!-- Form Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_functional_test_tracker_form">
			<field name="name">sportobello.athlete.functional.test.tracker.form</field>
			<field name="model">sportobello.athlete.functional.test.tracker</field>
			<field name="arch" type="xml">
				<form>
					<link rel="stylesheet" type="text/css" href="/sportobello_kojto_inherit/static/src/css/custom.css"/>
					<sheet>
						<div class="oe_title">
							<h1>Functional Testing</h1>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<field name="athlete_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
								<field name="test_date"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Heart Rate Metrics"/>
								<field name="hr_max"/>
								<field name="hr2"/>
								<field name="hr6"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Oxygen Metrics"/>
								<field name="vo2max"/>
								<field name="vo2max_per_kg"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Power"/>
								<field name="w_max"/>
								<field name="w_max_per_kg"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Lactate"/>
								<field name="la2"/>
								<field name="la6"/>
								<field name="la15"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Other Metrics"/>
								<field name="effective_pulse_zone"/>
								<field name="rq1_per_w"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Notes"/>
								<field name="notes" placeholder="Additional Notes for Test"/>
							</group>
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Search Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_functional_test_tracker_search">
			<field name="name">sportobello.athlete.functional.test.tracker.search</field>
			<field name="model">sportobello.athlete.functional.test.tracker</field>
			<field name="arch" type="xml">
				<search string="Functional Testing">
					<field name="athlete_id"/>
					<field name="test_date"/>
					<separator/>
					<filter name="recent" string="Last 30 Days" domain="[('test_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
					<!-- Group By -->
					<group expand="0" string="Group By">
						<filter name="group_by_athlete" string="Athlete" context="{'group_by': 'athlete_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<!-- Actions -->
		<record model="ir.actions.act_window" id="action_sportobello_athlete_functional_test_tracker">
			<field name="name">Functional Testing</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sportobello.athlete.functional.test.tracker</field>
			<field name="view_mode">list,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">Create First Functional Testing Record.</p>
			</field>
		</record>
	</data>
</odoo>
