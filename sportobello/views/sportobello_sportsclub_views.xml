<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- List Views -->
		<record model="ir.ui.view" id="view_sportobello_list">
			<field name="name">sportobello.list</field>
			<field name="model">sportobello</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1">
					<field name="name" />
					<field name="city" optional="show" />
					<field name="phone" optional="show" />
					<field name="email" optional="show" />
					<field name="website" optional="show" />
					<field name="active" widget="boolean_toggle" />
				</list>
			</field>
		</record>
		<record model="ir.ui.view" id="view_sportobello_form">
			<field name="name">sportobello.form</field>
			<field name="model">sportobello</field>
			<field name="arch" type="xml">
				<form>
					<link rel="stylesheet" type="text/css" href="/trinity_file_assets/static/src/css/custom.css" />
					<sheet>
						<div class="oe_title">
							<h1>Sport Club</h1>
						</div>
                        <div class="row">
                            <group class="col-lg-6">
                                <separator class="col-lg-12 separator" />
                                <field name="name" placeholder="Club Name" />
                                <field name="active" widget="boolean_toggle" />
                                <field name="company_id" placeholder="Company" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            </group>
                            <group class="col-lg-6">
                                <separator class="col-lg-12 separator" />
                                <field name="phone" placeholder="Phone" />
                                <field name="email" widget="email" placeholder="Email" />
                                <field name="website" placeholder="Website" />
                            </group>
                            <group class="col-lg-12">
                                <separator class="col-lg-12 separator" />
                                <field name="address" placeholder="Address" />
                                <field name="city" placeholder="City" />
                            </group>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <separator class='col-lg-12 separator'/>
                                <div class="mb-3 text-uppercase text-start fw-bold text-dark">Coaches</div>
                                <field name="coaches" nolabel="1" domain="[]" context="{'active_test': False}">
                                    <list editable="bottom" class="ko-list-main">
                                        <field name="active" widget="boolean_toggle"/>
                                        <field name="full_name"/>
                                        <field name="specialization"/>
                                        <field name="phone"/>
                                        <field name="email" widget="email"/>
                                        <field name="license_number"/>
                                        <field name="license_expiry_date"/>
                                        <field name="hire_date"/>
                                    </list>
                                </field>
                            </div>
                        </div>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_sportobello_search">
			<field name="name">sportobello.search</field>
			<field name="model">sportobello</field>
			<field name="arch" type="xml">
				<search string="Sport Club">
					<field name="name" string="Club Name" />
					<field name="city" string="City" />
					<field name="phone" string="Phone" />
					<field name="email" string="Email" />
					<separator />
					<filter name="active" string="Active" domain="[('active', '=', True)]" />
					<filter name="inactive" string="Inactive" domain="[('active', '=', False)]" />
					<group expand="1" string="Group By">
						<filter name="city" string="City" context="{'group_by':'city'}" />
						<filter name="company_id" string="Company" context="{'group_by':'company_id'}" />
					</group>
				</search>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_sportobello">
			<field name="name">Sport Clubs</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sportobello</field>
			<field name="view_mode">list,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">Create</p>
			</field>
		</record>
	</data>
</odoo>
