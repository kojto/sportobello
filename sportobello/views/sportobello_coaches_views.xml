<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_sportobello_coaches_list">
			<field name="name">sportobello.coaches.list</field>
			<field name="model">sportobello.coaches</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1">
					<field name="active" optional="show" widget="boolean_toggle" />
					<field name="full_name" />
					<field name="sportsclub_id" optional="show" />
					<field name="specialization" optional="show" />
					<field name="phone" optional="show" />
					<field name="email" optional="show" />
					<field name="license_number" optional="show" />
					<field name="license_expiry_date" optional="show" />
				</list>
			</field>
		</record>
		<record model="ir.ui.view" id="view_sportobello_coaches_form">
			<field name="name">sportobello.coaches.form</field>
			<field name="model">sportobello.coaches</field>
			<field name="arch" type="xml">
				<form>
					<link rel="stylesheet" type="text/css" href="/trinity_file_assets/static/src/css/custom.css" />
					<sheet>
						<div class="oe_title">
							<h1>Coach</h1>
						</div>
                        <div class="row">
                            <group class="col-lg-12">
                                <label for="first_name" />
                                <div class="d-flex">
                                    <field name="title"/>
                                    <field name="first_name" placeholder="First Name" />
                                    <field name="middle_name" placeholder="Middle Name" />
                                    <field name="last_name" placeholder="Last Name" />
                                </div>
                            </group>
                            <group class="col-lg-6">
                                <separator class="col-lg-12 separator" />
                                <field name="sportsclub_id" placeholder="Sport Club" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                                <field name="active" widget="boolean_toggle" />
                                <field name="specialization" placeholder="Specialization" />
                            </group>
                            <group class="col-lg-6">
                                <separator class="col-lg-12 separator" />
                                <field name="phone" placeholder="Phone" />
                                <field name="email" widget="email" placeholder="Email" />
                                <field name="hire_date" placeholder="Hire Date" />
                            </group>
                            <group class="col-lg-6">
                                <separator class="col-lg-12 separator" />
                                <field name="license_number" placeholder="License Number" />
                                <field name="license_expiry_date" placeholder="Valid Until" />
                            </group>
                        </div>
					</sheet>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_sportobello_coaches_search">
			<field name="name">sportobello.coaches.search</field>
			<field name="model">sportobello.coaches</field>
			<field name="arch" type="xml">
				<search string="Coaches">
					<field name="full_name" string="Full Name" />
					<field name="sportsclub_id" string="Sport Club" />
					<field name="specialization" string="Specialization" />
					<field name="license_number" string="License Number" />
					<separator />
					<filter name="active" string="Active" domain="[('active', '=', True)]" />
					<filter name="inactive" string="Inactive" domain="[('active', '=', False)]" />
					<group expand="1" string="Group By">
						<filter name="sportsclub_id" string="Sport Club" context="{'group_by':'sportsclub_id'}" />
						<filter name="specialization" string="Specialization" context="{'group_by':'specialization'}" />
					</group>
				</search>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_sportobello_coaches">
			<field name="name">Coaches</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sportobello.coaches</field>
			<field name="view_mode">list,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">Create</p>
			</field>
		</record>
	</data>
</odoo>
