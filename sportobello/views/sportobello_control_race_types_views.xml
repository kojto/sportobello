<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Control Race Types Views -->
		<record model="ir.ui.view" id="view_sportobello_control_race_types_list">
			<field name="name">sportobello.control.race.types.list</field>
			<field name="model">sportobello.control.race.types</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1" class="ko-list-main" editable="bottom">
					<field name="name"/>
					<field name="control_race_measure"/>
				</list>
			</field>
		</record>

		<record model="ir.ui.view" id="view_sportobello_control_race_types_search">
			<field name="name">sportobello.control.race.types.search</field>
			<field name="model">sportobello.control.race.types</field>
			<field name="arch" type="xml">
				<search string="Control Race Types">
					<field name="name"/>
					<field name="control_race_measure"/>
				</search>
			</field>
		</record>

		<!-- Actions -->
		<record model="ir.actions.act_window" id="action_sportobello_control_race_types">
			<field name="name">Control Race Types</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sportobello.control.race.types</field>
			<field name="view_mode">list</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">Create your first control race type.</p>
			</field>
		</record>
	</data>
</odoo>
