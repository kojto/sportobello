<odoo>
	<data>
		<!-- List Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_anthropometric_tracker_list">
			<field name="name">sportobello.athlete.anthropometric.tracker.list</field>
			<field name="model">sportobello.athlete.anthropometric.tracker</field>
			<field name="arch" type="xml">
				<list limit="100" sample="1" default_order="assessment_date desc" class="ko-list-main">
					<field name="athlete_id"/>
					<field name="assessment_date"/>
					<field name="height" optional="show"/>
					<field name="weight" optional="show"/>
					<field name="bmi" optional="show"/>
					<field name="wingspan" optional="hide"/>
					<field name="body_fat_percentage" optional="hide"/>
					<field name="muscle_mass" optional="hide"/>
					<field name="create_date" optional="hide"/>
				</list>
			</field>
		</record>

		<!-- Form Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_anthropometric_tracker_form">
			<field name="name">sportobello.athlete.anthropometric.tracker.form</field>
			<field name="model">sportobello.athlete.anthropometric.tracker</field>
			<field name="arch" type="xml">
				<form>
					<link rel="stylesheet" type="text/css" href="/sportobello_kojto_inherit/static/src/css/custom.css"/>
					<sheet>
						<div class="oe_title">
							<h1>Anthropometric Data</h1>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<field name="athlete_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
								<field name="assessment_date"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Basic Measurements"/>
								<field name="height"/>
								<field name="weight"/>
								<field name="bmi" readonly="1"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Body Dimensions"/>
								<field name="wingspan"/>
								<field name="shoulder_width"/>
								<field name="arm_length_left"/>
								<field name="arm_length_right"/>
								<field name="leg_length_left"/>
								<field name="leg_length_right"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Circumferences"/>
								<field name="chest_circumference"/>
								<field name="waist_circumference"/>
								<field name="hip_circumference"/>
								<field name="neck_circumference"/>
								<field name="bicep_circumference_left"/>
								<field name="bicep_circumference_right"/>
								<field name="thigh_circumference_left"/>
								<field name="thigh_circumference_right"/>
								<field name="calf_circumference_left"/>
								<field name="calf_circumference_right"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Body Composition"/>
								<field name="body_fat_percentage"/>
								<field name="muscle_mass"/>
								<field name="bone_mass"/>
								<field name="water_percentage"/>
								<field name="visceral_fat"/>
							</group>
						</div>
						<div class="row">
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Additional Measurements"/>
								<field name="sitting_height"/>
								<field name="reach_height"/>
								<field name="hand_length_left"/>
								<field name="hand_length_right"/>
								<field name="foot_length_left"/>
								<field name="foot_length_right"/>
							</group>
							<group class="col-lg-6">
								<separator class="col-lg-12 separator" string="Notes"/>
								<field name="notes" placeholder="Additional Notes"/>
							</group>
						</div>
					</sheet>
				</form>
			</field>
		</record>

		<!-- Search Views -->
		<record model="ir.ui.view" id="view_sportobello_athlete_anthropometric_tracker_search">
			<field name="name">sportobello.athlete.anthropometric.tracker.search</field>
			<field name="model">sportobello.athlete.anthropometric.tracker</field>
			<field name="arch" type="xml">
				<search string="Anthropometric Data">
					<field name="athlete_id"/>
					<field name="assessment_date"/>
					<separator/>
					<filter name="recent" string="Last 30 Days" domain="[('assessment_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
					<!-- Group By -->
					<group expand="0" string="Group By">
						<filter name="group_by_athlete" string="Athlete" context="{'group_by': 'athlete_id'}"/>
					</group>
				</search>
			</field>
		</record>

		<!-- Actions -->
		<record model="ir.actions.act_window" id="action_sportobello_athlete_anthropometric_tracker">
			<field name="name">Anthropometric Data</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">sportobello.athlete.anthropometric.tracker</field>
			<field name="view_mode">list,form</field>
			<field name="context">{}</field>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">Create First Anthropometric Data Record.</p>
			</field>
		</record>
	</data>
</odoo>
